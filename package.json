{
  "name": "kodyfire",
  "version": "0.0.69",
  "description": "Artifact generator,automation tool and a general purpose low code and nocode generator.",
  "typings": "./packages/kodyfire-cli/kodyfire.d.ts",
  "directories": {
    "bin": "./packages/kodyfire-cli/src/bin"
  },
  "scripts": {
    "watch": "lerna run watch --stream",
    "build": "tsc -p tsconfig.json",
    "changelog": "lerna-changelog",
    "start:kodyfire-builder": "lerna run start --scope kodyfire-builder --stream",
    "start:kodyfire-server": "lerna run dev --scope kodyfire-server  --stream",
    "start:builder": "npm run start:kodyfire-builder & npm run start:kodyfire-server",
    "lerna:install": "lerna exec -- npm install",
    "link": "lerna link",
    "test": "lerna run test --stream",
    "audit": "lerna exec -- npm audit fix --force",
    "kody": "node ./packages/kodyfire-cli/src/bin/kody.js",
    "kody:watch": "./packages/kodyfire-cli/src/bin/watch.mjs",
    "prepare": "husky install"
  },
  "keywords": [
    "low-code",
    "nocode",
    "generator",
    "artifact",
    "automation",
    "tool"
  ],
  "bin": {
    "kody": "./packages/kodyfire-cli/src/bin/kody.js",
    "cody": "./packages/kodyfire-cli/src/bin/kody.js",
    "kodyfire": "./packages/kodyfire-cli/src/bin/kody.js"
  },
  "author": "NOQTA",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nooqta/kodyfire.git"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@emotion/styled": "^11.6.0",
    "@jsonforms/core": "3.0.0-alpha.3",
    "@jsonforms/material-renderers": "3.0.0-alpha.3",
    "@jsonforms/react": "3.0.0-alpha.3",
    "@mui/icons-material": "^5.3.1",
    "@mui/lab": "^5.0.0-alpha.67",
    "@mui/material": "^5.4.0",
    "@mui/styles": "^5.3.0",
    "@types/node": "^12.20.43",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "ajv": "^8.6.3",
    "concurrently": "^7.0.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.9.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^12.3.4",
    "prettier": "2.5.1",
    "typescript": "~4.5.5",
    "zx": "^5.1.0"
  },
  "lint-staged": {
    "*.{js,json,yml,yaml,css,scss,ts,tsx,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "helloworld-html-kodyfire": "file:packages/helloworld-html-kodyfire",
    "laravel-kodyfire": "file:packages/laravel-kodyfire",
    "vuexy-kodyfire": "file:packages/vuexy-kodyfire"
  }
}
